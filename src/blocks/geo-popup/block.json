{
  "$schema": "https://schemas.wp.org/trunk/block.json",
  "apiVersion": 2,
  "name": "geo-utils/geo-popup",
  "version": "0.0.1",
  "title": "Geo Popup",
  "category": "geoutils-category",
  "icon": "admin-site",
  "description": "Create location-based popup content",
  "supports": {
    "html": false
  },
  "attributes": {
    "ruleType": {
      "type": "string",
      "default": "local"
    },
    "localRule": {
      "type": "object",
      "default": null
    },
    "globalRuleId": {
      "type": "string",
      "default": null
    },
    "popupStyle": {
      "type": "object",
      "default": {
        "width": "90%",
        "height": "auto",
        "backgroundColor": "#ffffff",
        "borderRadius": "8px"
      }
    },
    "triggerType": {
      "type": "string",
      "default": "immediate"
    },
    "triggerDelay": {
      "type": "number",
      "default": 0
    }
  },
  "textdomain": "geo-utils",
  "editorScript": "file:./geo-popup.tsx",
  "editorStyle": "file:./geo-popup.css",
  "style": "file:./style.css",
  "script": "file:./popup-handler.js",
  "render": "file:./render.php"
}
